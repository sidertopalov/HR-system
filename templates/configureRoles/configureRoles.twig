{% include "./common/header.twig" %}
<!-- Start content -->
<div class="content">
    <div class="container">
        <!-- end row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="m-b-30">
                                    <button id="addToTable" class="btn btn-primary waves-effect waves-light">{{ languages.add }} <i class="fa fa-plus"></i></button>
                                </div>
                            </div>
                        </div>

                        <div class="editable-responsive">
                            <table class="table table-striped" id="datatable-editable">
                                <thead>
                                <tr>
                                    <th>{{ languages.name }}</th>
                                    <th>{{ languages.email }}</th>
                                    <th>{{ languages.manager }}</th>
                                    <th>HR</th>
                                    <th>{{ languages.edit_section }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr class="gradeC">
                                    <td>aaa</td>
                                    <td>Internet Explorer 5.0</td>
                                    <td>Win 95+</td>
                                    <td>asfasfasaasa</td>
                                    <td class="actions">
                                        <a href="#" class="hidden on-editing save-row"><i class="fa fa-save"></i></a>
                                        <a href="#" class="hidden on-editing cancel-row"><i class="fa fa-times"></i></a>
                                        <a href="#" class="on-default edit-row"><i class="fa fa-pencil"></i></a>
                                        <a href="#" class="on-default remove-row"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end: panel body -->
                </div> <!-- end panel -->
            </div> <!-- end col-->
        </div>
        <!-- end row -->
    </div> <!-- container -->
</div> <!-- content -->
<!-- MODAL -->
<div id="dialog" class="modal-block mfp-hide">
    <section class="panel panel-info panel-color">
        <header class="panel-heading">
            <h2 class="panel-title">{{ languages.are_you_sure }}</h2>
        </header>
        <div class="panel-body">
            <div class="modal-wrapper">
                <div class="modal-text">
                    <p>{{ languages.are_you_sure_del }}</p>
                </div>
            </div>

            <div class="row m-t-20">
                <div class="col-md-12 text-right">
                    <button id="dialogConfirm" class="btn btn-primary waves-effect waves-light">{{ languages.confirm }}</button>
                    <button id="dialogCancel" class="btn btn-default waves-effect">{{ languages.cancel }}</button>
                </div>
            </div>
        </div>
    </section>
</div>
{% include "./common/footer.twig" %}