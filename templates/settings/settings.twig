        <div class="col-lg-4">
            <div class="card-box">

                <h4 class="header-title m-t-0 m-b-30">SMTP SETTINGS</h4>
                <hr/>

                <form action="" class="form-horizontal" data-parsley-validate novalidate method="GET"
                      id="smtpSettings">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="serverName">{{ languages.server_name }}</label>
                        </div>
                        <div class="col-lg-12">
                            <input type="text" name="serverName" parsley-trigger="change" required
                                   placeholder="{{ languages.server_name }}" class="form-control" id="serverName">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="port">{{ languages.port }}</label>
                        </div>
                        <div class="col-lg-12">
                            <input type="text" name="port" parsley-trigger="change" required
                                   placeholder="{{ languages.port }}" class="form-control" id="port">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="connectionSecurity">{{ languages.conn_security }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="connectionSecurity" required class="form-control">
                                <option value="" selected disabled>{{ languages.conn_security }}</option>
                                {% for con in connections %}
                                    <option value="{{ con['type'] }}">{{ con['type'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="userName">{{ languages.username }}</label>
                        </div>
                        <div class="col-lg-12">
                            <input type="text" name="userName" parsley-trigger="change" required
                                   placeholder="{{ languages.username }}" class="form-control" id="userName">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="passWord">{{ languages.password }}</label>
                        </div>
                        <div class="col-lg-12">
                            <input type="passWord" name="passWord" parsley-trigger="change" required
                                   placeholder="{{ languages.password }}" class="form-control" id="passWord">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="passWord2">{{ languages.conf_password }}</label>
                        </div>
                        <div class="col-lg-12">
                            <input data-parsley-equalto="#passWord" type="password" required
                                   placeholder="{{ languages.password }}" class="form-control" id="passWord2">
                        </div>
                    </div>
                    {#<div class="form-group">
                        <div class="checkbox">
                            <input id="remember-1" type="checkbox">
                            <label for="remember-1"> Remember me </label>
                        </div>
                    </div>#}

                    <div class="form-group text-right m-b-0">
                        <button class="btn btn-primary waves-effect waves-light" type="submit" name="smtp-save">
                            {{ languages.save }}
                        </button>
                        <button type="reset" class="btn btn-default waves-effect waves-light m-l-5">
                            {{ languages.cancel }}
                        </button>
                    </div>
                </form>
            </div>
        </div><!-- end col -->
        <div class="col-lg-4">
            <div class="card-box">


                <h4 class="header-title m-t-0 m-b-30">LOCALE SETTINGS</h4>
                <hr/>



                <form class="form-horizontal" data-parsley-validate novalidate method="POST"
                      id="localeSettings">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="timeZone">{{ languages.timezone }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="timeZone" required class="form-control" name="timezones">
                                <option value="" selected disabled>{{ languages.timezone }}</option>
                                {% for timezone in timezones %}
                                    <option value="{{ timezone }}">{{ timezone }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="dateFormat">{{ languages.dateformat }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="dateFormat" required class="form-control" name="dateformat">
                                <option value="" selected disabled>{{ languages.dateformat }}</option>
                                {% for timezone in tzones %}
                                    <option value="{{ timezone['date_format'] }}">{{ timezone['date_format'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="currencyFormat">{{ languages.currencyformat }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="currencyFormat" required class="form-control" name="currency">
                                <option value="" selected disabled>{{ languages.currencyformat }}</option>
                                {% for timezone in tzones %}
                                    <option value="{{ timezone['currency'] }}">{{ timezone['currency'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="language">{{ languages.language }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="language" required class="form-control" name="language">
                                <option value="" selected disabled>{{ languages.language }}</option>
                                {% for timezone in tzones %}
                                    <option value="{{ timezone['language'] }}">{{ timezone['language'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="firstDate">{{ languages.fdow }}</label>
                        </div>
                        <div class="col-lg-12">
                            <select id="firstDate" required class="form-control" name="fdow">
                                <option value="" selected disabled>{{ languages.fdow }}</option>
                                {% for timezone in tzones %}
                                    <option value="{{ timezone['fdow'] }}">{{ timezone['fdow'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group text-right m-b-0">
                        <button class="btn btn-primary waves-effect waves-light" type="submit" name="save">
                            {{ languages.save }}
                        </button>
                        <button type="reset" class="btn btn-default waves-effect waves-light m-l-5" name="cancel">
                            {{ languages.cancel }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">

            <button id="showCurrentSettings" type="button"
                    class="btn btn-block btn-lg col-lg-12 btn-xs btn-purple waves-effect waves-light">
                Show Current Settings
            </button>
            <hr class="hr">

            <div id="show" class="col-lg-12 showLocaleSettingsDiv">
                <ul id="settingsList" class="col-lg-12 listSettings">
                    <li class="bd">Locale - {{ locale }}</li>
                    <li class="bd">Timezone - Bulgaria</li>
                    <li class="bd">Date Format - 'DD\MM\YYYY'</li>
                    <li class="bd">Currency - BGN</li>
                    <li class="bd">Language - Bulgarian</li>
                    <li class="bd">FDOW - Monday</li>
                </ul>
            </div>

        </div>

    </div>
    <!-- end row -->

</div> <!-- container -->

